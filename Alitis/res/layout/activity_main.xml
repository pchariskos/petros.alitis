<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:alitis="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">

    <!-- The pager sliding tap strip  -->
    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="44dip"
        
        android:textColor="@color/tabs_text"
        android:textSize="14sp"
        
        alitis:pstsIndicatorColor="@color/main_app_theme"
        alitis:pstsUnderlineColor="@color/main_app_theme"
        alitis:pstsIndicatorHeight="5dp"
        alitis:pstsUnderlineHeight="0.5dp"
        alitis:pstsShouldExpand="true"
        />

    <!-- The fragment laying below the sliding tab  -->
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainPagerActivity" />

</LinearLayout>